<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" />
    <pages controlRenderingCompatibilityVersion="4.0" />
    
    <!-- Configuración de autenticación -->
    <authentication mode="None" />
    
    <!-- Configuración de autorización -->
    <authorization>
      <allow users="*" />
    </authorization>
    
    <!-- Configuración de sesión -->
    <sessionState mode="InProc" timeout="30" />
    
    <!-- Configuración de cookies -->
    <httpCookies httpOnlyCookies="true" requireSSL="false" />
    
    <!-- Configuración de errores -->
    <customErrors mode="Off" />
    
    <!-- Configuración de compresión -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="message/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
        <add mimeType="*/*" enabled="false" />
      </dynamicTypes>
      <staticTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="message/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/atom+xml" enabled="true" />
        <add mimeType="application/xaml+xml" enabled="true" />
        <add mimeType="image/svg+xml" enabled="true" />
        <add mimeType="*/*" enabled="false" />
      </staticTypes>
    </httpCompression>
  </system.web>
  
  <!-- Configuración de conexión a base de datos -->
  <connectionStrings>
    <add name="CELConnectionString" 
         connectionString="Data Source=localhost;Initial Catalog=CELDatabase;Integrated Security=True;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;ApplicationIntent=ReadWrite;MultiSubnetFailover=False" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <!-- Configuración de logging -->
  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add name="CELTraceListener" 
             type="System.Diagnostics.TextWriterTraceListener" 
             initializeData="logs/cel-trace.log" />
      </listeners>
    </trace>
  </system.diagnostics>
  
  <!-- Configuración de seguridad -->
  <system.webServer>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="10485760" />
      </requestFiltering>
    </security>
    
    <!-- Configuración de headers de seguridad -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Configuración de compresión -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Configuración de caché -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>
    
    <!-- Configuración de errores personalizados -->
    <httpErrors errorMode="Custom">
      <remove statusCode="404" />
      <error statusCode="404" path="/404.html" responseMode="ExecuteURL" />
      <remove statusCode="500" />
      <error statusCode="500" path="/500.html" responseMode="ExecuteURL" />
    </httpErrors>
    
    <!-- Configuración de reescritura de URL -->
    <rewrite>
      <rules>
        <!-- Redirección de HTTP a HTTPS -->
        <rule name="Redirect to HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" 
                  redirectType="Permanent" />
        </rule>
        
        <!-- Redirección de www a no-www -->
        <rule name="Remove www" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^www\.(.*)$" />
          </conditions>
          <action type="Redirect" url="https://{C:1}/{R:1}" 
                  redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
  
  <!-- Configuración de aplicación -->
  <appSettings>
    <add key="SiteName" value="Centro Especializado en Lenguas (CEL)" />
    <add key="SiteDescription" value="Aprende idiomas con excelencia académica y profesores certificados" />
    <add key="ContactEmail" value="info@cel.edu.co" />
    <add key="ContactPhone" value="+57 (1) 234-5678" />
    <add key="SiteAddress" value="Carrera 15 #93-47, Bogotá, Colombia" />
    <add key="GoogleAnalyticsId" value="GA-XXXXXXXXX-X" />
    <add key="FacebookPage" value="https://facebook.com/celbogota" />
    <add key="InstagramPage" value="https://instagram.com/celbogota" />
    <add key="WhatsAppNumber" value="+573001234567" />
    <add key="MaxFileUploadSize" value="10485760" />
    <add key="AllowedFileTypes" value=".pdf,.doc,.docx,.jpg,.jpeg,.png" />
    <add key="EmailSmtpServer" value="smtp.gmail.com" />
    <add key="EmailSmtpPort" value="587" />
    <add key="EmailUsername" value="noreply@cel.edu.co" />
    <add key="EmailPassword" value="your-email-password" />
    <add key="EnableEmailNotifications" value="true" />
    <add key="EnableSmsNotifications" value="false" />
    <add key="SmsApiKey" value="your-sms-api-key" />
    <add key="EnableMaintenanceMode" value="false" />
    <add key="MaintenanceMessage" value="Sitio en mantenimiento. Volveremos pronto." />
  </appSettings>
  
  <!-- Configuración de runtime -->
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Mvc" publicKeyToken="31BF3856AD364E35" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.7.0" newVersion="5.2.7.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
